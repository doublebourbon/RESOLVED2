import itertools
import os
from RNN import test
import numpy as np


Dropout = [1,0.5,0.25]
Recurrent_Dropout = [1,0.5,0.25]

j = 0
for i in itertools.product(Dropout, Recurrent_Dropout):
    test(training_samples_percentage = 0.5,
         validation_samples_percentage = 0.2,
         maxlen = 200,
         max_words = 10000,
         delai = 730,
         epochs = 20,
         embedding_dim = 200,
         dropout = i[0],
         recurrent_dropout = i[1],
         learning_rate = 0.01,
         batch_size = 1000,
         width = 32,
         layers = 5)
    j = j+1
    print("Calculation for the parameters {} is done.".format(i))
    print(round(100*j/(len(Dropout)*len(Recurrent_Dropout)),4),"% of the tests have been done.")
